<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomCameraActivity">

    <!-- Camera Preview -->
    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Transparent overlay with a square box -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overlay_square" />


    <!-- Rectangular Box 1 -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rectangular_box1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_rect_black"
        app:layout_constraintBottom_toTopOf="@id/rectangular_box2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <!-- Price Text -->
            <TextView
                android:id="@+id/price_label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:text="@string/mrp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <!-- Rs 123 Text -->
            <TextView
                android:id="@+id/price_value1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="18dp"
                android:text="@string/Price"
                android:textColor="@android:color/holo_green_light"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <!-- Edit Icon -->
            <ImageView
                android:id="@+id/edit_icon1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/edit_icon"
                app:tint="@android:color/white" />


            <EditText
                android:id="@+id/number_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Rectangular Box 2 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rectangular_box2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_rect_black"
        app:layout_constraintBottom_toTopOf="@id/rectangular_box3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/price_label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="18dp"
                android:text="@string/mfd"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/price_value2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="18dp"
                android:text="@string/Date"
                android:textColor="@android:color/holo_green_light"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:id="@+id/edit_icon2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/edit_icon"
                app:tint="@android:color/white" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Rectangular Box 3 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rectangular_box3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_rect_black"
        app:layout_constraintBottom_toTopOf="@id/rectangular_box4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/price_label3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="18dp"
                android:text="@string/exp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/price_value3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="18dp"
                android:text="@string/Exp"
                android:textColor="@android:color/holo_green_light"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:id="@+id/edit_icon3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/edit_icon"
                app:tint="@android:color/white" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Rectangular Box 4 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rectangular_box4"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_rect_black"
        app:layout_constraintBottom_toTopOf="@id/black_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/price_label4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="18dp"
                android:text="@string/batch"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/price_value4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="18dp"
                android:text="@string/Batch"
                android:textColor="@android:color/holo_green_light"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:id="@+id/edit_icon4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/edit_icon"
                app:tint="@android:color/white" />

            <EditText
                android:id="@+id/edit_text4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@android:color/black"
                android:visibility="gone"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Black background below the button -->
    <View
        android:id="@+id/black_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageButton
        android:id="@+id/captureButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circular_border"
        android:contentDescription="@string/cam"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/neoicon"
        app:layout_constraintBottom_toBottomOf="@id/black_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/black_background"
        app:layout_constraintVertical_bias="0.5"
        app:tint="@null" />


    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/icon_background_selector"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/baseline_burst_mode_24"
        app:layout_constraintBottom_toBottomOf="@id/black_background"
        app:layout_constraintEnd_toStartOf="@id/captureButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/right_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/icon_background_selector"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/baseline_format_list_bulleted_24"
        app:layout_constraintBottom_toBottomOf="@id/black_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/captureButton"
        app:layout_constraintVertical_bias="0.5"
        app:tint="@color/white" />


    <HorizontalScrollView
        android:id="@+id/horizontal_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@android:color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/black_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/image_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" />
    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
